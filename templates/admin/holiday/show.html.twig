{% extends 'base.html.twig' %}

{% block title %}{{ holiday.name }} - Détails du Jour Férié - HR Flow{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .holiday-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 1rem;
            color: white;
            padding: 2rem;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }
        .holiday-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 100px;
            height: 100px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }
        .holiday-header::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -10%;
            width: 80px;
            height: 80px;
            background: rgba(255,255,255,0.05);
            border-radius: 50%;
            animation: float 8s ease-in-out infinite reverse;
        }
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
        .detail-card {
            background: white;
            border-radius: 0.75rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
            border: 1px solid #e5e7eb;
            transition: all 0.3s ease;
            overflow: hidden;
        }
        .detail-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }
        .detail-card-header {
            background: #f8fafc;
            border-bottom: 1px solid #e5e7eb;
            padding: 1.25rem;
        }
        .detail-card-body {
            padding: 1.5rem;
        }
        .status-indicator {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            font-weight: 500;
            font-size: 0.875rem;
        }
        .status-active {
            background: #dcfce7;
            color: #166534;
        }
        .status-inactive {
            background: #fef2f2;
            color: #991b1b;
        }
        .type-indicator {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            font-weight: 500;
            font-size: 0.875rem;
        }
        .type-recurring {
            background: #dbeafe;
            color: #1e40af;
        }
        .type-one-time {
            background: #f0f9ff;
            color: #0369a1;
        }
        .date-display {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            padding: 2rem;
            border-radius: 1rem;
            text-align: center;
            margin-bottom: 1.5rem;
        }
        .date-day {
            font-size: 3rem;
            font-weight: 700;
            line-height: 1;
            margin-bottom: 0.5rem;
        }
        .date-month-year {
            font-size: 1.25rem;
            opacity: 0.9;
            margin-bottom: 0.5rem;
        }
        .date-weekday {
            font-size: 1rem;
            opacity: 0.8;
        }
        .info-row {
            display: flex;
            align-items: center;
            padding: 0.75rem 0;
            border-bottom: 1px solid #f3f4f6;
        }
        .info-row:last-child {
            border-bottom: none;
        }
        .info-label {
            font-weight: 600;
            color: #374151;
            min-width: 150px;
            display: flex;
            align-items: center;
        }
        .info-value {
            color: #6b7280;
            flex: 1;
        }
        .countdown-card {
            background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
            border-radius: 1rem;
            padding: 1.5rem;
            text-align: center;
            color: #92400e;
        }
        .countdown-number {
            font-size: 2.5rem;
            font-weight: 700;
            line-height: 1;
            margin-bottom: 0.5rem;
        }
        .countdown-text {
            font-size: 1rem;
            opacity: 0.8;
        }
        .action-buttons {
            position: sticky;
            top: 20px;
            z-index: 100;
        }
        .timeline-item {
            position: relative;
            padding-left: 2rem;
            margin-bottom: 1.5rem;
        }
        .timeline-item::before {
            content: '';
            position: absolute;
            left: 0.5rem;
            top: 0.5rem;
            width: 0.75rem;
            height: 0.75rem;
            background: #3b82f6;
            border-radius: 50%;
        }
        .timeline-item::after {
            content: '';
            position: absolute;
            left: 0.8125rem;
            top: 1.25rem;
            width: 2px;
            height: calc(100% - 0.75rem);
            background: #e5e7eb;
        }
        .timeline-item:last-child::after {
            display: none;
        }
        .breadcrumb-item + .breadcrumb-item::before {
            content: "›";
            color: #6b7280;
        }
        .impact-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1rem;
            background: #eff6ff;
            border: 1px solid #dbeafe;
            border-radius: 0.5rem;
            color: #1e40af;
            font-size: 0.875rem;
        }
        .related-info {
            background: #f8fafc;
            border-radius: 0.5rem;
            padding: 1rem;
            border-left: 4px solid #3b82f6;
        }
        .holiday-past {
            opacity: 0.7;
        }
        .holiday-today {
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.8; }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-3">
    <!-- Fil d'Ariane -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('dashboard') }}" class="text-decoration-none">
                    <i class="fas fa-home"></i> Tableau de bord
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('admin_holiday_index') }}" class="text-decoration-none">
                    Jours Fériés
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">{{ holiday.name }}</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Colonne principale -->
        <div class="col-lg-8">
            <!-- En-tête du jour férié -->
            <div class="holiday-header {% if holiday.date < date() %}holiday-past{% elseif holiday.date|date('Y-m-d') == date()|date('Y-m-d') %}holiday-today{% endif %}">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-calendar-day fa-2x me-3"></i>
                            <div>
                                <h1 class="h2 mb-1">{{ holiday.name }}</h1>
                                <p class="mb-0 opacity-75">
                                    {% if holiday.date < date() %}
                                        <i class="fas fa-history me-1"></i>Jour férié passé
                                    {% elseif holiday.date|date('Y-m-d') == date()|date('Y-m-d') %}
                                        <i class="fas fa-star me-1"></i>Aujourd'hui !
                                    {% else %}
                                        <i class="fas fa-clock me-1"></i>Jour férié à venir
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <div class="d-flex flex-wrap gap-2 justify-content-md-end">
                            <span class="status-indicator {% if holiday.isActive %}status-active{% else %}status-inactive{% endif %}">
                                <i class="fas {% if holiday.isActive %}fa-check-circle{% else %}fa-times-circle{% endif %} me-1"></i>
                                {{ holiday.isActive ? 'Actif' : 'Inactif' }}
                            </span>
                            <span class="type-indicator {% if holiday.isRecurring %}type-recurring{% else %}type-one-time{% endif %}">
                                <i class="fas {% if holiday.isRecurring %}fa-redo{% else %}fa-calendar-day{% endif %} me-1"></i>
                                {{ holiday.isRecurring ? 'Récurrent' : 'Ponctuel' }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Affichage de la date -->
            <div class="date-display">
                <div class="date-day">{{ holiday.date|date('d') }}</div>
                <div class="date-month-year">{{ holiday.date|date('F Y')|capitalize }}</div>
                <div class="date-weekday">{{ holiday.date|date('l')|capitalize }}</div>
            </div>

            <!-- Informations détaillées -->
            <div class="detail-card mb-4">
                <div class="detail-card-header">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Informations détaillées
                    </h3>
                </div>
                <div class="detail-card-body">
                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-tag text-muted me-2"></i>
                            Nom complet
                        </div>
                        <div class="info-value">{{ holiday.name }}</div>
                    </div>

                    {% if holiday.description %}
                        <div class="info-row">
                            <div class="info-label">
                                <i class="fas fa-align-left text-muted me-2"></i>
                                Description
                            </div>
                            <div class="info-value">{{ holiday.description }}</div>
                        </div>
                    {% endif %}

                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-calendar-alt text-muted me-2"></i>
                            Date complète
                        </div>
                        <div class="info-value">
                            {{ holiday.date|date('l d F Y')|capitalize }}
                            <small class="text-muted">({{ holiday.date|date('d/m/Y') }})</small>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-repeat text-muted me-2"></i>
                            Type de récurrence
                        </div>
                        <div class="info-value">
                            {% if holiday.isRecurring %}
                                <span class="text-info">
                                    <i class="fas fa-redo me-1"></i>
                                    Récurrent (chaque année)
                                </span>
                            {% else %}
                                <span class="text-secondary">
                                    <i class="fas fa-calendar-day me-1"></i>
                                    Ponctuel (une seule fois)
                                </span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-toggle-{% if holiday.isActive %}on{% else %}off{% endif %} text-muted me-2"></i>
                            Statut d'activation
                        </div>
                        <div class="info-value">
                            {% if holiday.isActive %}
                                <span class="text-success">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Actif - Pris en compte dans les calculs
                                </span>
                            {% else %}
                                <span class="text-danger">
                                    <i class="fas fa-times-circle me-1"></i>
                                    Inactif - Ignoré dans les calculs
                                </span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-plus-circle text-muted me-2"></i>
                            Date de création
                        </div>
                        <div class="info-value">
                            {{ holiday.createdAt|date('d/m/Y à H:i') }}
                            <small class="text-muted">
                                (il y a {{ holiday.createdAt|time_diff }})
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Impact sur l'organisation -->
            {% if holiday.isActive %}
                <div class="detail-card mb-4">
                    <div class="detail-card-header">
                        <h3 class="h5 mb-0">
                            <i class="fas fa-building text-primary me-2"></i>
                            Impact sur l'organisation
                        </h3>
                    </div>
                    <div class="detail-card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="impact-badge w-100">
                                    <i class="fas fa-users"></i>
                                    <div>
                                        <div class="fw-bold">Employés concernés</div>
                                        <div class="small">Tous les employés actifs</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="impact-badge w-100">
                                    <i class="fas fa-business-time"></i>
                                    <div>
                                        <div class="fw-bold">Fermeture des bureaux</div>
                                        <div class="small">Pas de travail prévu</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {% if holiday.isRecurring %}
                            <div class="related-info mt-3">
                                <h6 class="mb-2">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Information importante
                                </h6>
                                <p class="mb-0 small">
                                    Ce jour férié est <strong>récurrent</strong>, il sera automatiquement pris en compte chaque année 
                                    à la même date pour les calculs de congés et de planning.
                                </p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            <!-- Historique -->
            <div class="detail-card">
                <div class="detail-card-header">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-history text-primary me-2"></i>
                        Historique
                    </h3>
                </div>
                <div class="detail-card-body">
                    <div class="timeline-item">
                        <div class="fw-bold">Création du jour férié</div>
                        <div class="text-muted small">
                            {{ holiday.createdAt|date('d/m/Y à H:i') }}
                        </div>
                        <div class="small mt-1">
                            Jour férié "{{ holiday.name }}" créé dans le système
                        </div>
                    </div>

                    {% if holiday.isRecurring %}
                        <div class="timeline-item">
                            <div class="fw-bold">Configuration récurrente</div>
                            <div class="text-muted small">
                                {{ holiday.createdAt|date('d/m/Y à H:i') }}
                            </div>
                            <div class="small mt-1">
                                Défini comme jour férié récurrent (chaque année)
                            </div>
                        </div>
                    {% endif %}

                    {% if not holiday.isActive %}
                        <div class="timeline-item">
                            <div class="fw-bold text-warning">Désactivation</div>
                            <div class="text-muted small">
                                Date non disponible
                            </div>
                            <div class="small mt-1">
                                Le jour férié a été désactivé
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Colonne latérale -->
        <div class="col-lg-4">
            <!-- Actions rapides -->
            <div class="action-buttons">
                <div class="detail-card mb-4">
                    <div class="detail-card-header">
                        <h3 class="h6 mb-0">
                            <i class="fas fa-tools text-primary me-2"></i>
                            Actions rapides
                        </h3>
                    </div>
                    <div class="detail-card-body">
                        <div class="d-grid gap-2">
                            <a href="{{ path('admin_holiday_edit', {'id': holiday.id}) }}" 
                               class="btn btn-primary">
                                <i class="fas fa-edit me-1"></i>
                                Modifier
                            </a>
                            
                            <button class="btn btn-outline-secondary" 
                                    onclick="duplicateHoliday({{ holiday.id }})">
                                <i class="fas fa-copy me-1"></i>
                                Dupliquer
                            </button>
                            
                            {% if holiday.isActive %}
                                <button class="btn btn-outline-warning" 
                                        onclick="toggleStatus({{ holiday.id }}, false)">
                                    <i class="fas fa-pause me-1"></i>
                                    Désactiver
                                </button>
                            {% else %}
                                <button class="btn btn-outline-success" 
                                        onclick="toggleStatus({{ holiday.id }}, true)">
                                    <i class="fas fa-play me-1"></i>
                                    Activer
                                </button>
                            {% endif %}
                            
                            <div class="dropdown-divider"></div>
                            
                            <button class="btn btn-outline-danger" 
                                    onclick="deleteHoliday({{ holiday.id }}, '{{ holiday.name }}')">
                                <i class="fas fa-trash me-1"></i>
                                Supprimer
                            </button>
                            
                            <a href="{{ path('admin_holiday_index') }}" 
                               class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Retour à la liste
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Compte à rebours ou statut temporel -->
                {% if holiday.date > date() %}
                    {% set daysUntil = (holiday.date.timestamp - date().timestamp) // (24*3600) %}
                    <div class="countdown-card mb-4">
                        <div class="countdown-number">{{ daysUntil }}</div>
                        <div class="countdown-text">
                            jour{% if daysUntil > 1 %}s{% endif %} restant{% if daysUntil > 1 %}s{% endif %}
                        </div>
                        <div class="small mt-2 opacity-75">
                            Jusqu'au {{ holiday.date|date('d/m/Y') }}
                        </div>
                    </div>
                {% elseif holiday.date|date('Y-m-d') == date()|date('Y-m-d') %}
                    <div class="countdown-card mb-4" style="background: linear-gradient(135deg, #fef3c7 0%, #f59e0b 100%);">
                        <div class="countdown-number">
                            <i class="fas fa-star"></i>
                        </div>
                        <div class="countdown-text">
                            C'est aujourd'hui !
                        </div>
                        <div class="small mt-2 opacity-75">
                            {{ holiday.date|date('d/m/Y') }}
                        </div>
                    </div>
                {% else %}
                    {% set daysPast = (date().timestamp - holiday.date.timestamp) // (24*3600) %}
                    <div class="countdown-card mb-4" style="background: linear-gradient(135deg, #e5e7eb 0%, #9ca3af 100%); color: #374151;">
                        <div class="countdown-number">{{ daysPast }}</div>
                        <div class="countdown-text">
                            jour{% if daysPast > 1 %}s{% endif %} écoulé{% if daysPast > 1 %}s{% endif %}
                        </div>
                        <div class="small mt-2 opacity-75">
                            Depuis le {{ holiday.date|date('d/m/Y') }}
                        </div>
                    </div>
                {% endif %}

                <!-- Informations connexes -->
                <div class="detail-card">
                    <div class="detail-card-header">
                        <h3 class="h6 mb-0">
                            <i class="fas fa-link text-primary me-2"></i>
                            Informations connexes
                        </h3>
                    </div>
                    <div class="detail-card-body">
                        <div class="small">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Année concernée :</span>
                                <span class="fw-bold">{{ holiday.date|date('Y') }}</span>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Semaine :</span>
                                <span class="fw-bold">{{ holiday.date|date('W') }}</span>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Trimestre :</span>
                                <span class="fw-bold">
                                    {% set month = holiday.date|date('n') %}
                                    {% if month <= 3 %}1er{% elseif month <= 6 %}2ème{% elseif month <= 9 %}3ème{% else %}4ème{% endif %}
                                </span>
                            </div>
                            
                            {% if holiday.isRecurring %}
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted">Prochaine occurrence :</span>
                                    <span class="fw-bold">{{ holiday.date|date_modify('+1 year')|date('d/m/Y') }}</span>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-exclamation-triangle text-warning fa-3x"></i>
                </div>
                <p class="text-center">
                    Êtes-vous sûr de vouloir supprimer le jour férié 
                    <strong id="holidayNameToDelete"></strong> ?
                </p>
                <div class="alert alert-warning">
                    <small>
                        <i class="fas fa-info-circle me-1"></i>
                        Cette action est irréversible et pourrait affecter les calculs de congés existants.
                    </small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Annuler
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Supprimer définitivement
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal de duplication -->
<div class="modal fade" id="duplicateModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="{{ path('admin_holiday_duplicate', {'id': holiday.id}) }}">
                <div class="modal-header">
                    <h5 class="modal-title">Dupliquer le jour férié</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Créer une copie de "{{ holiday.name }}" :</p>
                    
                    <div class="mb-3">
                        <label for="newName" class="form-label">Nouveau nom</label>
                        <input type="text" class="form-control" id="newName" name="name" 
                               value="{{ holiday.name }} (Copie)" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="newDate" class="form-label">Nouvelle date</label>
                        <input type="date" class="form-control" id="newDate" name="date" 
                               value="{{ holiday.date|date('Y-m-d') }}" required>
                    </div>
                    
                    <input type="hidden" name="_token" value="{{ csrf_token('duplicate') }}">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-copy me-1"></i>Dupliquer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Fonction de suppression
        function deleteHoliday(id, name) {
            document.getElementById('holidayNameToDelete').textContent = name;
            document.getElementById('deleteForm').action = `/admin/holiday/${id}/delete`;
            
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Fonction de duplication
        function duplicateHoliday(id) {
            const modal = new bootstrap.Modal(document.getElementById('duplicateModal'));
            modal.show();
        }

        // Fonction de changement de statut
        function toggleStatus(id, activate) {
            const action = activate ? 'activate' : 'deactivate';
            const message = activate ? 'activer' : 'désactiver';
            
            if (confirm(`Êtes-vous sûr de vouloir ${message} ce jour férié ?`)) {
                // Simulation d'une requête AJAX
                fetch(`/admin/holiday/${id}/${action}`, {
                    method: 'POST',
                    headers: {
