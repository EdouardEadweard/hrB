            border-radius: 6px;
            text-decoration: none;
            color: #4a5568;
            font-weight: 600;
        }

        .pagination a:hover {
            background: #e2e8f0;
        }

        .pagination .current {
            background: #667eea;
            color: white;
        }

        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                gap: 20px;
                text-align: center;
            }

            .filters-form {
                grid-template-columns: 1fr;
            }

            .stats-section {
                grid-template-columns: repeat(2, 1fr);
            }

            .teams-table {
                font-size: 14px;
            }

            .teams-table th,
            .teams-table td {
                padding: 15px 10px;
            }

            .team-info {
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
            }
        }

        @media (max-width: 480px) {
            .stats-section {
                grid-template-columns: 1fr;
            }

            .teams-table th:nth-child(n+4),
            .teams-table td:nth-child(n+4) {
                display: none;
            }
        }
    </style>
{% endblock %}

