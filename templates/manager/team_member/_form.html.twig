{{ form_start(form, {'attr': {'class': 'team-member-form', 'novalidate': 'novalidate'}}) }}

<style>
    .team-member-form {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        overflow: hidden;
    }
    
    .form-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.5rem 2rem;
        text-align: center;
    }
    
    .form-header h3 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
    }
    
    .form-header p {
        margin: 0.5rem 0 0 0;
        opacity: 0.9;
        font-size: 0.95rem;
    }
    
    .form-body {
        padding: 2rem;
    }
    
    .form-section {
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #e9ecef;
    }
    
    .form-section:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }
    
    .section-title {
        color: #495057;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .section-title i {
        color: #667eea;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-group:last-child {
        margin-bottom: 0;
    }
    
    .form-label {
        display: block;
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }
    
    .form-label.required::after {
        content: " *";
        color: #dc3545;
        font-weight: bold;
    }
    
    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: #ffffff;
    }
    
    .form-control:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        background-color: #ffffff;
    }
    
    .form-control:hover {
        border-color: #c8d3f0;
    }
    
    .form-select {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 0.75rem center;
        background-repeat: no-repeat;
        background-size: 1rem;
        padding-right: 2.5rem;
        cursor: pointer;
    }
    
    .form-text {
        font-size: 0.875rem;
        color: #6c757d;
        margin-top: 0.25rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }
    
    .form-text i {
        font-size: 0.8rem;
    }
    
    .form-check {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 8px;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .form-check:hover {
        background-color: #e9ecef;
        border-color: #c8d3f0;
    }
    
    .form-check-input {
        width: 1.25rem;
        height: 1.25rem;
        margin: 0;
        cursor: pointer;
        accent-color: #667eea;
    }
    
    .form-check-label {
        font-weight: 500;
        color: #495057;
        cursor: pointer;
        flex: 1;
        margin: 0;
    }
    
    .form-errors {
        background-color: #f8d7da;
        color: #721c24;
        padding: 0.75rem 1rem;
        border-radius: 6px;
        margin-top: 0.5rem;
        border: 1px solid #f5c6cb;
    }
    
    .form-errors ul {
        margin: 0;
        padding-left: 1.25rem;
    }
    
    .form-errors li {
        margin-bottom: 0.25rem;
    }
    
    .form-errors li:last-child {
        margin-bottom: 0;
    }
    
    .date-group {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }
    
    .user-selection {
        position: relative;
    }
    
    .user-info {
        background-color: #e7f3ff;
        border: 1px solid #b3d9ff;
        border-radius: 8px;
        padding: 1rem;
        margin-top: 0.5rem;
    }
    
    .user-details {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
    }
    
    .user-name {
        font-weight: 600;
        color: #0066cc;
        margin-bottom: 0.25rem;
    }
    
    .user-meta {
        font-size: 0.875rem;
        color: #666;
    }
    
    .status-indicator {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 500;
    }
    
    .status-active {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
    
    .status-inactive {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
    
    .form-actions {
        background-color: #f8f9fa;
        padding: 1.5rem 2rem;
        border-top: 1px solid #e9ecef;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
    }
    
    .btn {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        min-width: 120px;
        justify-content: center;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }
    
    .btn-primary:hover {
        background: linear-gradient(135deg, #5a67d8, #6b46c1);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }
    
    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }
    
    .btn-secondary:hover {
        background-color: #5a6268;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(108, 117, 125, 0.3);
    }
    
    .required-fields-note {
        font-size: 0.875rem;
        color: #6c757d;
        font-style: italic;
    }
    
    @media (max-width: 768px) {
        .form-body {
            padding: 1.5rem;
        }
        
        .form-header {
            padding: 1.25rem 1.5rem;
        }
        
        .date-group {
            grid-template-columns: 1fr;
        }
        
        .form-actions {
            flex-direction: column;
            align-items: stretch;
            gap: 0.75rem;
        }
        
        .btn {
            width: 100%;
        }
        
        .user-details {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
        }
    }
</style>

<div class="form-header">
    <h3>
        <i class="fas fa-users"></i>
        {% if app.request.get('_route') == 'manager_team_member_new' %}
            Ajouter un membre à l'équipe
        {% else %}
            Modifier un membre d'équipe
        {% endif %}
    </h3>
    <p>Gérez les membres de votre équipe et leurs informations</p>
</div>

<div class="form-body">
    <!-- Section Sélection de l'utilisateur -->
    <div class="form-section">
        <div class="section-title">
            <i class="fas fa-user-plus"></i>
            Sélection de l'utilisateur
        </div>
        
        <div class="form-group user-selection">
            {{ form_label(form.user, 'Utilisateur', {'label_attr': {'class': 'form-label required'}}) }}
            {{ form_widget(form.user, {'attr': {'class': 'form-control form-select'}}) }}
            {% if form.user.vars.errors|length > 0 %}
                <div class="form-errors">
                    {{ form_errors(form.user) }}
                </div>
            {% endif %}
            <div class="form-text">
                <i class="fas fa-info-circle"></i>
                Sélectionnez l'utilisateur à ajouter à l'équipe
            </div>
        </div>
    </div>
    
    <!-- Section Équipe -->
    <div class="form-section">
        <div class="section-title">
            <i class="fas fa-users-cog"></i>
            Équipe de destination
        </div>
        
        <div class="form-group">
            {{ form_label(form.team, 'Équipe', {'label_attr': {'class': 'form-label required'}}) }}
            {{ form_widget(form.team, {'attr': {'class': 'form-control form-select'}}) }}
            {% if form.team.vars.errors|length > 0 %}
                <div class="form-errors">
                    {{ form_errors(form.team) }}
                </div>
            {% endif %}
            <div class="form-text">
                <i class="fas fa-info-circle"></i>
                Choisissez l'équipe à laquelle ajouter ce membre
            </div>
        </div>
    </div>
    
    <!-- Section Dates -->
    <div class="form-section">
        <div class="section-title">
            <i class="fas fa-calendar-alt"></i>
            Période d'appartenance
        </div>
        
        <div class="date-group">
            <div class="form-group">
                {{ form_label(form.joinedAt, 'Date d\'adhésion', {'label_attr': {'class': 'form-label required'}}) }}
                {{ form_widget(form.joinedAt, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                {% if form.joinedAt.vars.errors|length > 0 %}
                    <div class="form-errors">
                        {{ form_errors(form.joinedAt) }}
                    </div>
                {% endif %}
                <div class="form-text">
                    <i class="fas fa-calendar-plus"></i>
                    Date et heure d'intégration dans l'équipe
                </div>
            </div>
            
            <div class="form-group">
                {{ form_label(form.leftAt, 'Date de sortie', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.leftAt, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                {% if form.leftAt.vars.errors|length > 0 %}
                    <div class="form-errors">
                        {{ form_errors(form.leftAt) }}
                    </div>
                {% endif %}
                <div class="form-text">
                    <i class="fas fa-calendar-minus"></i>
                    Optionnel - Date de sortie de l'équipe
                </div>
            </div>
        </div>
    </div>
    
    <!-- Section Statut -->
    <div class="form-section">
        <div class="section-title">
            <i class="fas fa-toggle-on"></i>
            Statut du membre
        </div>
        
        <div class="form-group">
            <div class="form-check">
                {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.isActive, 'Membre actif dans l\'équipe', {'label_attr': {'class': 'form-check-label'}}) }}
            </div>
            {% if form.isActive.vars.errors|length > 0 %}
                <div class="form-errors">
                    {{ form_errors(form.isActive) }}
                </div>
            {% endif %}
            <div class="form-text">
                <i class="fas fa-lightbulb"></i>
                Un membre inactif n'apparaîtra plus dans les listes actives mais conservera son historique
            </div>
        </div>
    </div>
</div>

<div class="form-actions">
    <div class="required-fields-note">
        <i class="fas fa-asterisk"></i>
        Les champs marqués d'un astérisque (*) sont obligatoires
    </div>
    
    <div style="display: flex; gap: 1rem;">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i>
            {% if app.request.get('_route') == 'manager_team_member_new' %}
                Ajouter le membre
            {% else %}
                Enregistrer les modifications
            {% endif %}
        </button>
        
        <a href="{{ path('manager_team_member_index') }}" class="btn btn-secondary">
            <i class="fas fa-times"></i>
            Annuler
        </a>
    </div>
</div>

{{ form_end(form) }}

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Animation d'entrée du formulaire
        const form = document.querySelector('.team-member-form');
        form.style.opacity = '0';
        form.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
            form.style.transition = 'all 0.5s ease';
            form.style.opacity = '1';
            form.style.transform = 'translateY(0)';
        }, 100);
        
        // Gestion de la date de sortie
        const joinedAtInput = document.querySelector('input[name*="joinedAt"]');
        const leftAtInput = document.querySelector('input[name*="leftAt"]');
        
        if (joinedAtInput && leftAtInput) {
            joinedAtInput.addEventListener('change', function() {
                if (this.value) {
                    leftAtInput.min = this.value;
                }
            });
            
            leftAtInput.addEventListener('change', function() {
                if (this.value && joinedAtInput.value) {
                    if (new Date(this.value) <= new Date(joinedAtInput.value)) {
                        alert('La date de sortie doit être postérieure à la date d\'adhésion.');
                        this.value = '';
                    }
                }
            });
        }
        
        // Confirmation avant soumission si date de sortie renseignée
        const submitBtn = document.querySelector('button[type="submit"]');
        if (submitBtn) {
            submitBtn.addEventListener('click', function(e) {
                if (leftAtInput && leftAtInput.value) {
                    if (!confirm('Vous avez renseigné une date de sortie. Cela signifie que ce membre quittera l\'équipe. Êtes-vous sûr ?')) {
                        e.preventDefault();
                        return false;
                    }
                }
            });
        }
        
        // Auto-complétion intelligente de la date d'adhésion
        if (joinedAtInput && !joinedAtInput.value) {
            const now = new Date();
            const formattedNow = now.toISOString().slice(0, 16);
            joinedAtInput.value = formattedNow;
        }
        
        // Mise à jour dynamique du statut visuel
        const isActiveCheckbox = document.querySelector('input[name*="isActive"]');
        if (isActiveCheckbox) {
            function updateStatusIndicator() {
                let indicator = document.querySelector('.current-status-indicator');
                if (!indicator) {
                    indicator = document.createElement('div');
                    indicator.className = 'current-status-indicator status-indicator';
                    isActiveCheckbox.closest('.form-check').after(indicator);
                }
                
                if (isActiveCheckbox.checked) {
                    indicator.className = 'current-status-indicator status-indicator status-active';
                    indicator.innerHTML = '<i class="fas fa-check-circle"></i> Membre actif';
                } else {
                    indicator.className = 'current-status-indicator status-indicator status-inactive';
                    indicator.innerHTML = '<i class="fas fa-times-circle"></i> Membre inactif';
                }
            }
            
            isActiveCheckbox.addEventListener('change', updateStatusIndicator);
            updateStatusIndicator(); // Appel initial
        }
    });
</script>